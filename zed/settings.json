// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "gutter": {
    "min_line_number_digits": 3,
    "folds": true,
    "breakpoints": true,
    "line_numbers": true
  },
  "auto_update": false,
  "unnecessary_code_fade": 0.3,
  "active_pane_modifiers": {
    "inactive_opacity": 0.7
  },
  "show_whitespaces": "all",
  "format_on_save": "off",
  "debugger": {
    "dock": "bottom"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "git_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "dock": "bottom",
    "font_size": 14.0,
    "font_family": "GoMono Nerd Font"
  },
  "minimap": {
    "show": "never"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "disable_ai": true
}
